<%- model_class = Resist -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:ID) %></th>
      <th><%= model_class.human_attribute_name(:Reference) %></th>
      <th><%= model_class.human_attribute_name(:MIC) %></th>
      <th><%= model_class.human_attribute_name(:Drug) %></th>
      <th><%= model_class.human_attribute_name(:Isolated_Resistant) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @resists.each do |resist| %>
      <tr>
        <td><%= link_to resist.id, resist_path(resist) %></td>
        <td><%= resist.reference %></td>
        <td><%= resist.mic %></td>
        <td><%= resist.drug.name %></td>
        <td><%= resist.isolated.name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      resist_path(resist), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_resist_path(resist), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      resist_path(resist),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want delete this resistance?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_resist_path,
            :class => 'btn btn-primary' %>
