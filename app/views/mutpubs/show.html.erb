<%- model_class = Mutpub -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Mutation_Associate) %>:</strong></dt>
  <dd><%= @mutpub.mutation.nucleotide %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Publication_Associate) %>:</strong></dt>
  <dd><%= @mutpub.publication.title %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              mutpubs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mutpub_path(@mutpub), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mutpub_path(@mutpub),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
