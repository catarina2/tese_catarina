<%- model_class = Isolated -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Id) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Disease) %></th>
      <th><%= model_class.human_attribute_name(:Number_of_Samples) %></th>
      <th><%= model_class.human_attribute_name(:Origin) %></th>
      <th><%= model_class.human_attribute_name(:Organism) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @isolateds.each do |isolated| %>
      <tr>
        <td><%= link_to isolated.id, isolated_path(isolated) %></td>
        <td><%= isolated.name %></td>
        <td><%= isolated.disease %></td>
        <td><%= isolated.n_samples %></td>
        <td><%= isolated.origin.origin_t %></td>
        <td><%= isolated.organism.name %></td>
        <td>
           <%= link_to t('.show', :default => t("helpers.links.show")),
                      isolated_path(isolated), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_isolated_path(isolated), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      isolated_path(isolated),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete the isolated?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_isolated_path,
            :class => 'btn btn-primary' %>
