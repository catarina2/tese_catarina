<%= form_for @gene, :html => { :class => "form-horizontal gene" } do |f| %>

    <% if @gene.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@gene.errors.count, "error") %> prohibited this gene from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @gene.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :Name_of_Gene, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@gene[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :Sequence, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sequence, :class => 'form-control' %>
    </div>
    <%= error_span(@gene[:sequence]) %>
  </div>
  <div class="control-group">
    <%= f.label :Reference, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reference, :class => 'form-control' %>
    </div>
    <%= error_span(@gene[:reference]) %>
  </div>
  <div class="control-group">
    <%= f.label :UniProt, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :uniprot, :class => 'form-control' %>
    </div>
    <%= error_span(@gene[:uniprot]) %>
  </div>
  <div class="control-group">
    <%= f.label :Symbol, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :symbol, :class => 'form-control' %>
    </div>
    <%= error_span(@gene[:symbol]) %>
  </div>
  <div class="control-group">
    <%= f.label :Choose_the_Isolated_Associate, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :isolated_id, @isolateds, :id, :name, prompt: true, :class => 'form-control' %>
    </div>
    <%= error_span(@gene[:isolated_id]) %>
  </div>

  <br />
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            genes_path, :class => 'btn btn-default' %>

<% end %>
