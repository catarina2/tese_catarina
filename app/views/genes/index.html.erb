<%- model_class = Gene -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:ID) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%= model_class.human_attribute_name(:Sequence) %></th>
      <th><%= model_class.human_attribute_name(:Reference) %></th>
      <th><%= model_class.human_attribute_name(:UniProt) %></th>
      <th><%= model_class.human_attribute_name(:Symbol) %></th>
      <th><%= model_class.human_attribute_name(:Isolated_Associate) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @genes.each do |gene| %>
      <tr>
        <td><%= link_to gene.id, gene_path(gene) %></td>
        <td><%= gene.name %></td>
        <td><%= gene.sequence %></td>
        <td><%= gene.reference %></td>
        <td><%= gene.uniprot %></td>
        <td><%= gene.symbol %></td>
        <td><%= gene.isolated.name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      gene_path(gene), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_gene_path(gene), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      gene_path(gene),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want delete this gene?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_gene_path,
            :class => 'btn btn-primary' %>
