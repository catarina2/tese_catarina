<div class="panel panel-info">
<div class="panel-heading"><strong>Publication</strong></div>
<div class="panel-body">
<%= form_for @publication, :html => { :class => "form-horizontal publication" } do |f| %>

    <% if @publication.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@publication.errors.count, "error") %> prohibited this publication from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @publication.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :Author, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :author, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:author]) %>
  </div>
  <div class="control-group">
    <%= f.label :Title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:title]) %>
  </div>
  <div class="control-group">
    
    <%= f.label :Date, :class => 'control-label' %>
    <div class="controls">
      <p id="date">
      <%= f.date_select :date, :class => 'form-control' %>
      </p>
    </div>
    <%= error_span(@publication[:date]) %>
  
  </div>
  <div class="control-group">
    <%= f.label :Journal, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :journal, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:journal]) %>
  </div>

  <hr>
  <%= f.submit "Submit", :class => 'btn active btn-sm btn-primary'%>
  <%= link_to " Cancel",
            publications_path, :class => 'btn active btn-sm btn-default glyphicon glyphicon-remove' %>

<% end %>
</div>
</div>
