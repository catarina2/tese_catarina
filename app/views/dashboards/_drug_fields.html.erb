<%= form_for @drug, url:createdrug_index_path do |f|%>
  <%= error_messages_for :drug %>
    
      <div class="panel panel-info">
            <div class="panel-heading"><strong>New Drug</strong></div>
            <div class="panel-body">
              <div class="control-group">
                  <%= f.label :Reference, :class => 'control-label' %>
                  <div class="controls">
                  <%= f.text_field :reference, :class => 'form-control' %>
                  </div>
                    <%= error_span(@drug[:reference]) %>
                  </div>
                  <br />
                  <div class="control-group">
                  <%= f.label :Name, :class => 'control-label' %>
                  <div class="controls">
                  <%= f.text_field :name, :class => 'form-control' %>
                  </div>
                    <%= error_span(@drug[:name]) %>
                  </div>
                    <br />
                  <div class="control-group">
                  <%= f.label :ATC, :class => 'control-label' %>
                  <div class="controls">
                  <%= f.text_field :atc, :class => 'form-control' %>
                  </div>
                    <%= error_span(@drug[:atc]) %>
                  </div>
                    <br />
                  <div class="control-group">
                  <%= f.label :DrugBank, :class => 'control-label' %>
                  <div class="controls">
                  <%= f.text_field :drugbank, :class => 'form-control' %>
                  </div>
                    <%= error_span(@drug[:drugbank]) %>
                  </div>
                  <br />
                   
                  <span style="position: relative; left: 350px;"><%= f.submit "Submit", :class => 'btn btn-sm active btn-primary'%></span>
        
      </div>
    </div>
  <%end%>

  