<%= form_for @mutation, url:createmutation_index_path do |f|%>
<%= error_messages_for :mutation %>
  <div class="panel panel-info">
      <div class="panel-heading"><strong>New mutation</strong></div>
      <div class="panel-body">
          <p>
            <div class="control-group">
              <%= f.label :Nucleotide, :class => 'control-label' %><br />
              <div class="controls">
              <%= f.text_field :nucleotide, :class => 'form-control' %><br />
              </div>
            
            </div>
          </p>
          <p>
            <div class="control-group">
              <%= f.label :Aminoacid, :class => 'control-label' %><br />
              <div class="controls">
              <%= f.text_field :aminoacid, :class => 'form-control' %><br />
              </div>
              
            </div>
          </p>
          <p>
            <div class="control-group">
              <%= f.label :HGVS, :class => 'control-label' %><br />
              <div class="controls">
              <%= f.text_field :hgvs, :class => 'form-control' %><br />
              </div>
              
            </div>
          </p>
          <hr>
          <div class="panel panel-info">
          <div class="panel-heading"><strong>Do you want to add a publication to this mutation?</strong></div>
          <div class="panel-body">
                <div id="x">
                   <%= f.fields_for :publications do |builder| %>
                      <%= render 'publication_fields', f: builder%>
                   <%end%>
              </div>
          <%= link_to_add_fields " Add a Publication to this mutation", f, :publications %>
          </div>
          </div>
          <hr>
          <span style="position: relative; left: 350px;"><%= f.submit "Submit", :class => 'btn btn-sm active btn-primary'%></span>
        
      </div>
    </div>
<%end%>
        
