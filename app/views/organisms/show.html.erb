<%- model_class = Organism -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Rate_of_Oraganism) %>:</strong></dt>
  <dd><%= @organism.tax_org %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Name) %>:</strong></dt>
  <dd><%= @organism.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              organisms_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_organism_path(@organism), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              organism_path(@organism),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete the Organism?')) },
              :class => 'btn btn-danger' %>
