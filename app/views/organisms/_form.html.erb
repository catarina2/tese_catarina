<div class="panel panel-info">
<div class="panel-heading"><strong>Organism</strong></div>
<div class="panel-body">
<%= form_for @organism, :html => { :class => "form-horizontal organism" } do |f| %>

    <% if @organism.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@organism.errors.count, "error") %> prohibited this organism from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @organism.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :Rate_of_organism, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tax_org, :class => 'form-control' %>
    </div>
    <%= error_span(@organism[:tax_org]) %>
  </div>
  <div class="control-group">
    <%= f.label :Name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@organism[:name]) %>
  </div>
  <hr>
  <%= f.submit "Submit", :class => 'btn active btn-sm btn-primary'%>
  <%= link_to " Cancel",
            organisms_path, :class => 'btn active btn-sm btn-default glyphicon glyphicon-remove' %>

<% end %>
</div>
</div>
