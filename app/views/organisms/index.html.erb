<%- model_class = Organism -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Id) %></th>
      <th><%= model_class.human_attribute_name(:Rate) %></th>
      <th><%= model_class.human_attribute_name(:Name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @organisms.each do |organism| %>
      <tr>
        <td><%= link_to organism.id, organism_path(organism) %></td>
        <td><%= organism.tax_org %></td>
        <td><%= organism.name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      organism_path(organism), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_organism_path(organism), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      organism_path(organism),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want to delete the Organism?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_organism_path,
            :class => 'btn btn-primary' %>
