<%- model_class = Stat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Number_of_Studies) %>:</strong></dt>
  <dd><%= @stat.n_studies %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Information) %>:</strong></dt>
  <dd><%= @stat.info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Gene_Associate) %>:</strong></dt>
  <dd><%= @stat.gene.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Mutation_Associate) %>:</strong></dt>
  <dd><%= @stat.mutation.nucleotide %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stats_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stat_path(@stat), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stat_path(@stat),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want delete this statistics?')) },
              :class => 'btn btn-danger' %>
