<%- model_class = Stat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:ID) %></th>
      <th><%= model_class.human_attribute_name(:Number_of_Studies) %></th>
      <th><%= model_class.human_attribute_name(:Information) %></th>
      <th><%= model_class.human_attribute_name(:Gene_Associate) %></th>
      <th><%= model_class.human_attribute_name(:Mutation_Associate) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= link_to stat.id, stat_path(stat) %></td>
        <td><%= stat.n_studies %></td>
        <td><%= stat.info %></td>
        <td><%= stat.gene.name %></td>
        <td><%= stat.mutation.nucleotide %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      stat_path(stat), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_stat_path(stat), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      stat_path(stat),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want delete this statistics?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_stat_path,
            :class => 'btn btn-primary' %>
