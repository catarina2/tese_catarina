<%- model_class = Drug -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Reference) %>:</strong></dt>
  <dd><%= @drug.reference %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Name) %>:</strong></dt>
  <dd><%= @drug.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ATC) %>:</strong></dt>
  <dd><%= @drug.atc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:DrugBank) %>:</strong></dt>
  <dd><%= @drug.drugbank %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              drugs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_drug_path(@drug), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              drug_path(@drug),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure you want delete the Drug?')) },
              :class => 'btn btn-danger' %>
