<%= form_for @drug, :html => { :class => "form-horizontal drug" } do |f| %>

    <% if @drug.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@drug.errors.count, "error") %> prohibited this drug from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @drug.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :Reference, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reference, :class => 'form-control' %>
    </div>
    <%= error_span(@drug[:reference]) %>
  </div>
  <div class="control-group">
    <%= f.label :Name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@drug[:name]) %>
  </div>
  <div class="control-group">
    <%= f.label :ATC, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :atc, :class => 'form-control' %>
    </div>
    <%= error_span(@drug[:atc]) %>
  </div>
  <div class="control-group">
    <%= f.label :DrugBank, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :drugbank, :class => 'form-control' %>
    </div>
    <%= error_span(@drug[:drugbank]) %>
  </div>

  <br />
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            drugs_path, :class => 'btn btn-default' %>

<% end %>
